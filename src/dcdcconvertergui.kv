<DCDCConverterGUI>:
    _pwm_duty_cycle_slider: pwm_duty_cycle_slider
    _pwm_frequency_slider: pwm_frequency_slider

    _pwm_duty_cycle_label: pwm_duty_cycle_label
    _pwm_frequency_label: pwm_frequency_label

    _pwm_graph: pwm_graph
    _output_voltage_graph: output_voltage_graph

    _device_selection_button: device_selection_button
    _disconnect_device_button: disconnect_device_button

    _status_label: status_label
    _status_bar: status_bar

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: "Tensi√≥n de salida"

                VoltageOutputGraph:
                    id: output_voltage_graph

                    size_hint: 1, None
                    height: 200

                Label:
                    text: "Pulso PWM"

                PWMGraph
                    id: pwm_graph

                    size_hint: 1, None
                    height: 200

                Label:
                    text: "Duty Cycle"


                BoxLayout:
                    Slider:
                        id: pwm_duty_cycle_slider

                        step: 1 / 255

                        min: root.MIN_DUTY_CYCLE
                        max: root.MAX_DUTY_CYCLE

                        value: 0.5
                    Label:
                        id: pwm_duty_cycle_label

                        text: "{:3.0f} %".format(pwm_duty_cycle_slider.value * 100)

                Label:
                    text: "Frecuencia"

                BoxLayout:
                    Slider:
                        id: pwm_frequency_slider

                        min: root.MIN_FREQ
                        max: root.MAX_FREQ

                        value: 20e3

                        on_value: pwm_frequency_label.text = "{} Hz".format(int(pwm_frequency_slider.value))
                    Label:
                        id: pwm_frequency_label
                        text: "20000 Hz"

            BoxLayout:
                orientation: 'vertical'

                Button:
                    id: device_selection_button

                    text: 'Seleccionar dispositivo'
                    pos_hint: {'center_x': 0.5}
                    size_hint: (None, None)
                    padding: 5, 5
                    size: self.texture_size

                Button:
                    id: disconnect_device_button

                    text: 'Desconectar dispositivo'
                    pos_hint: {'center_x': 0.5}
                    size_hint: (None, None)
                    padding: 5, 5
                    size: self.texture_size

        BoxLayout:
            id: status_bar
            color: .2, .6, .2
            padding_top: 32

            padding: [0, self.padding_top, 0, 0]

            canvas.before:
                Color:
                    rgb: self.color
                Rectangle:
                    size: self.size[0], self.size[1] - self.padding_top
                    pos: self.pos

            size_hint: (1, None)
            height: self.minimum_height

            Label:
                size_hint: (None, None)
                size: self.texture_size

                padding: (16, 8)

                text: 'Estado '

            Label:
                id: status_label

                size_hint: (None, None)
                size: self.texture_size

                padding: (16, 8)

                text: 'Desconectado'
